#include <iostream>
#include <fstream>
#include <iomanip>
using namespace std;
struct person1
{
    char  numbe[10];
    char name[10];
}person1[5];
struct person2
{
    int score[10];
    char numbe[10];
    char name[10];
    float average;
}person2[5];
int main(int argc, const char * argv[])
{
    
    ifstream in1("/Users/s20181106117/Desktop/in1.txt ");
    ifstream in2("/Users/s20181106117/Desktop/in2.txt ");
    ofstream out("/Users/s20181106117/Desktop/out.txt ");
    if(in1.is_open())
        {
        for(int i=0;i<5;i++)
        {
            in1>>person1[i].numbe;
            in1>>person1[i].name;
        }
        //cout<<person1<<" "<<endl;
        in1.close();
    }
    if(in2.is_open())
        {
        for(int i=0;i<5;i++)
            {
            for(int j=0;j<5;j++)
                {
                in2>>person2[i].score[j];
                }
                in2>>person2[i].numbe;
                in2>>person2[i].name;
            }
        //cout<<person2<<" "<<endl;
        
        for(int i=0;i<7;i++)
        {
            for(int j=0;j<7;j++)
            {
            in2>>person2[i].score[j];
            }
        }
        for(int i=0;i<7;i++)
            {
            for(int j=0;j<7;j++)
                {
                if(person2[i].score[j]>person2[i+1].score[j+1])
                    {
                    person2[i].score[7]=person2[i].score[j];
                    person2[i].score[j]=person2[i+1].score[j+1];
                    person2[i+1].score[j+1]=person2[i].score[7];
                    }
                }
             }
        /*for(i=0;i<n;i++)
            {
            cout<<person2[i].score[i]<<" "<<endl;
            }*/
        int h,i;
        for(int i=1;i<6;i++)
            {
                for(int j=1;j<6;j++)
                {
                //h=0;
                h=person2[i].score[j]+h;
                }
            }
            person2[i].average=h/5;
        //cout<<average<<endl;
        in2.close();
        }
    if(out.is_open())
    {
        for(int i=0;i<7;i++)
        out<<setw(10)<<person1[i].numbe
        <<setw(10)<<person1[i].name<<setw(10)
        <<person2[i].name<<setw(10)
        <<setiosflags(ios::fixed)<<setprecision(2)
        <<person2[i].average<<endl;
        out.close();
        
    }
    return 0;
    }
